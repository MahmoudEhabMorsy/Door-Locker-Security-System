#ifndef BUZZER_H_
#define BUZZER_H_
#include"gpio.h"

/*******************************************************************************
 *                                Definitions                                  *
 *******************************************************************************/
/* Buzzer Configurations */
#define BUZZER_PORT_ID PORTD_ID
#define BUZZER_PIN_ID PIN2_ID
/*******************************************************************************
 *                      Functions Prototypes                                   *
 *******************************************************************************/
/*
 * Description :
 * initiate the buzzer
 */
void Buzzer_init(void);
/*
 * Description :
 * turn on the buzzer
 */
void Buzzer_on(void);
/*
 * Description :
 * turn off the buzzer
 */
void Buzzer_off(void);

#endif /* BUZZER_H_ */
